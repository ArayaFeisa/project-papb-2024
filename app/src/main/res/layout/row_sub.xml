<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/vCard"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/card"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivIlustrasi"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/card"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/vCard"
        app:layout_constraintStart_toStartOf="@+id/vCard"
        app:layout_constraintTop_toTopOf="@+id/vCard"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvBab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="11dp"
        android:text="Sub Judul"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vCard"
        app:layout_constraintTop_toBottomOf="@+id/ivIlustrasi" />

    <TextView
        android:id="@+id/tvDeskripsi"
        android:layout_width="242dp"
        android:layout_height="37dp"
        android:elevation="11dp"
        android:text="Deskripsi dari sub judul Deskripsi dari sub judul Deskripsi dari sub judul"
        app:layout_constraintStart_toStartOf="@+id/tvBab"
        app:layout_constraintTop_toBottomOf="@+id/tvBab" />

    <Button
        android:id="@+id/btPilih"
        android:layout_width="79dp"
        android:layout_height="47dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rsquare"
        android:elevation="20dp"
        android:onClick="terpilih"
        android:stateListAnimator="@null"
        android:tag=""
        android:text="Pilih"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/vCard"
        app:layout_constraintEnd_toEndOf="@+id/vCard" />
</androidx.constraintlayout.widget.ConstraintLayout>